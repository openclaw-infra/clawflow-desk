{
	"name": "clawflow-desk",
	"version": "0.1.0",
	"description": "Ultra-lightweight AI CLI configuration manager",
	"scripts": {
		"start": "vite build && electrobun dev",
		"dev": "electrobun dev --watch",
		"dev:hmr": "concurrently \"bun run hmr\" \"bun run start\"",
		"hmr": "vite --port 5173",
		"build:canary": "vite build && electrobun build --env=canary"
	},
	"dependencies": {
		"electrobun": "latest",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"valtio": "^2.1.0",
		"lucide-react": "^0.468.0",
		"clsx": "^2.1.1",
		"tailwind-merge": "^2.6.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@vitejs/plugin-react": "^4.3.4",
		"@tailwindcss/vite": "^4.0.0",
		"concurrently": "^9.1.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.9.3",
		"vite": "^6.4.1"
	}
}
